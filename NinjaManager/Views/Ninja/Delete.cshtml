@model Ninja

<h1>Ninja verwijderen</h1>
<p>Weet je zeker dat je de ninja <strong>@Model.Name</strong> wilt verwijderen?</p>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <button class="btn btn-danger" type="submit">Ja</button>
    <a class="btn btn-secondary" asp-action="Index">Nee</a>
</form>