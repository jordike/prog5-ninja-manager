@model List<Ninja>

<div class="d-flex justify-content-between">
    <h1 class="mb-3">Ninja's</h1>

    <span>
        <a class="btn btn-primary rounded-pill" asp-action="Create">
            <i class="fa fa-solid fa-plus"></i>
        </a>
    </span>
</div>

@if (Model.Count == 0)
{
    <p class="text-muted">Er zijn nog geen ninja's.</p>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 gap-3">
        @foreach (var ninja in Model)
        {
            <a class="col text-decoration-none text-black" asp-action="Edit" asp-route-id="@ninja.Id">
                <div class="card">
                    <div class="card-header">
                        <h2>@ninja.Name</h2>
                    </div>

                    <div class="card-body">
                        <ul>
                            <li>Gold: @ninja.Gold</li>
                            <li>Strength: 1</li>
                            <li>Intelligence: 1</li>
                            <li>Agility: 1</li>
                            <li>Value: 1</li>
                        </ul>
                    </div>
                </div>
            </a>
        }
    </div>
}